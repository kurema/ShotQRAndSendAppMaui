<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuickQR.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QuickQR"
    xmlns:pages="clr-namespace:QuickQR.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Camera" >
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialIconsR" Glyph="&#xe412;" />
            </Tab.Icon>
            <ShellContent Title="Camera" ContentTemplate="{DataTemplate pages:CameraPage}" Route="CameraPage" />
        </Tab>
        <Tab Title="Histories">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialIconsR" Glyph="&#xe889;" />
            </Tab.Icon>
            <ShellContent Title="Histories" ContentTemplate="{DataTemplate pages:HistoryPage}" Route="HistoryPage" />
        </Tab>
        <Tab Title="Config">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialIconsR" Glyph="&#xe8b8;" />
            </Tab.Icon>
            <ShellContent Title="Config" ContentTemplate="{DataTemplate pages:ConfigPage}" Route="ConfigPage" />
        </Tab>
    </TabBar>
</Shell>
