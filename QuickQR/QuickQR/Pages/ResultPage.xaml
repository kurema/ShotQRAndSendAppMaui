<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="QuickQR.Pages.ResultPage"
             Title="ResultPage"
             xmlns:vm="clr-namespace:QuickQR.Models"
             x:DataType="vm:History"
             >
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="About barcode" />
            <toolkit:Expander IsExpanded="True">
                <toolkit:Expander.Header>
                    <Label Text="Content" />
                </toolkit:Expander.Header>
                <Label Text="{Binding BarcodeResult.Value}" />
            </toolkit:Expander>
            <Label Text="Format" />
            <Label Text="{Binding BarcodeResult.Format}" />
            <Label Text="{Binding BarcodeResult.Raw}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>